{
  "Print": {
    "prefix": "print",
    "body": ["print ${1:expr};"],
    "description": "Print an expression"
  },
  "Variable": {
    "prefix": "var",
    "body": ["var ${1:name} = ${2:value};"],
    "description": "Variable declaration"
  },
  "Function": {
    "prefix": "fun",
    "body": ["fun ${1:name}(${2:params}) {", "  ${3:// body}", "}"],
    "description": "Function declaration"
  },
  "Class": {
    "prefix": "class",
    "body": [
      "class ${1:Name} {",
      "  fun init(${2:params}) {",
      "    ${3:// init body}",
      "  }",
      "",
      "  fun ${4:method}(${5:params}) {",
      "    ${6:// body}",
      "  }",
      "}"
    ],
    "description": "Class declaration"
  },
  "If": {
    "prefix": "if",
    "body": ["if (${1:condition}) {", "  ${2:// body}", "}"],
    "description": "If statement"
  },
  "IfElse": {
    "prefix": "ife",
    "body": ["if (${1:condition}) {", "  ${2:// body}", "} else {", "  ${3:// else}", "}"],
    "description": "If/else statement"
  },
  "While": {
    "prefix": "while",
    "body": ["while (${1:condition}) {", "  ${2:// body}", "}"],
    "description": "While loop"
  },
  "For": {
    "prefix": "for",
    "body": ["for (${1:var i = 0}; ${2:i < count}; ${3:i = i + 1}) {", "  ${4:// body}", "}"],
    "description": "For loop"
  }
}
