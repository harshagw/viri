{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\{\\s*|\\[\\s*|\\(\\s*)$",
    "decreaseIndentPattern": "^\\s*[\\}\\]\\)]"
  },
  "onEnterRules": [
    {
      "beforeText": "^.*\\{\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*\\}\\s*$",
      "action": { "indent": "outdent" }
    },
    {
      "beforeText": "^.*\\[\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*\\]\\s*$",
      "action": { "indent": "outdent" }
    },
    {
      "beforeText": "^.*\\(\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*\\)\\s*$",
      "action": { "indent": "outdent" }
    }
  ]
}
